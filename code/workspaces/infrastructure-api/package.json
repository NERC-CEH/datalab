{
  "name": "infrastructure-api",
  "version": "0.0.1",
  "description": "Datalabs infrastructure management API",
  "main": "server.js",
  "license": "GPL-3.0",
  "private": true,
  "dependencies": {
    "@kubernetes/client-node": "^0.10.2",
    "axios": "0.19.0",
    "bluebird": "3.5.5",
    "body-parser": "1.19.0",
    "chalk": "2.4.2",
    "common": "^0.1.0",
    "convict": "5.1.0",
    "express": "4.17.1",
    "express-jwt": "5.3.1",
    "express-validator": "6.1.1",
    "fs-extra-promise": "1.0.1",
    "js-yaml": "3.13.1",
    "jwks-rsa": "1.6.0",
    "lodash": "4.17.15",
    "mongoose": "5.7.7",
    "mustache": "3.0.1",
    "uuid": "3.3.2",
    "service-chassis": "^0.1.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "axios-mock-adapter": "1.17.0",
    "concurrently": "4.1.1",
    "core-js": "^3.2.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "~24.8.0",
    "node-mocks-http": "1.7.6",
    "nodemon": "^1.19.1",
    "shx": "^0.3.2"
  },
  "scripts": {
    "test": "LOG_LEVEL=emerg jest --watch",
    "test-ci": "CI=true LOG_LEVEL=emerg jest",
    "lint": "eslint ./src",
    "build": "shx rm -rf dist && shx mkdir -p resources && babel src --root-mode upward-optional --ignore **/__mocks__/,**/*.spec.js --out-dir dist",
    "start": "concurrently -p \"[{name}]\" -n \"API,WATCHER\" -c \"bgBlue.bold,bgMagenta.bold\"  \"yarn api\" \"yarn watcher\"",
    "api": "nodemon --watch src --ignore **/*.spec.js --exec babel-node --root-mode upward --ignore='../../node_modules' src/server.js",
    "watcher": "nodemon --watch src --ignore **/*.spec.js --exec babel-node --root-mode upward --ignore='../../node_modules' src/watcher.js"
  }
}
