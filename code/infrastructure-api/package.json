{
  "name": "infrastructure-api",
  "version": "0.0.1",
  "description": "Datalabs infrastructure management API",
  "main": "server.js",
  "license": "GPL-3.0",
  "private": true,
  "dependencies": {
    "axios": "0.16.2",
    "bluebird": "3.5.0",
    "body-parser": "1.17.2",
    "chalk": "2.1.0",
    "convict": "4.0.0",
    "express": "4.15.4",
    "express-validator": "4.1.0",
    "fs-extra-promise": "1.0.1",
    "mustache": "2.3.0",
    "uuid": "3.1.0",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "axios-mock-adapter": "1.9.0",
    "babel-cli": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "eslint": "4.5.0",
    "eslint-config-airbnb-base": "11.3.1",
    "eslint-plugin-import": "2.7.0",
    "jest": "20.0.4",
    "node-mocks-http": "1.6.4",
    "nodemon": "1.11.0",
    "shx": "0.2.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "start": "nodemon --exec babel-node src/server.js",
    "clean": "shx rm -rf ./dist",
    "build": "babel src --out-dir dist",
    "dist": "yarn clean && yarn build && yarn update-version",
    "test": "yarn test-ci -- --watch",
    "test-ci": "jest",
    "update-version": "VERSION=`git describe --tags --always` && sed -i -- 's/undefined/\"'\"$VERSION\"'\"/g' dist/version.js"
  }
}
