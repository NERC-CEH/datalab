{
  "name": "infrastructure-api",
  "version": "0.0.1",
  "description": "Datalabs infrastructure management API",
  "main": "server.js",
  "license": "GPL-3.0",
  "private": true,
  "dependencies": {
    "@kubernetes/client-node": "^0.8.2",
    "axios": "0.16.2",
    "bluebird": "3.5.0",
    "body-parser": "1.17.2",
    "chalk": "2.1.0",
    "convict": "4.0.0",
    "express": "4.15.4",
    "express-jwt": "5.3.0",
    "express-validator": "4.2.1",
    "fs-extra-promise": "1.0.1",
    "js-yaml": "3.9.1",
    "jwks-rsa": "1.2.1",
    "lodash": "4.17.4",
    "mongoose": "5.0.10",
    "mustache": "2.3.0",
    "uuid": "3.1.0",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "axios-mock-adapter": "1.9.0",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "concurrently": "3.5.1",
    "eslint": "4.5.0",
    "eslint-config-airbnb-base": "11.3.1",
    "eslint-plugin-import": "2.7.0",
    "jest": "20.0.4",
    "node-mocks-http": "1.6.4",
    "nodemon": "1.11.0",
    "shx": "0.2.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "start": "concurrently -p \"[{name}]\" -n \"API,WATCHER\" -c \"bgBlue.bold,bgMagenta.bold\"  \"npm run api\" \"npm run watcher\"",
    "api": "nodemon --exec babel-node src/server.js",
    "watcher": "nodemon --exec babel-node src/watcher.js",
    "clean": "shx rm -rf ./dist",
    "build": "babel src --ignore spec.js,__mocks__ --out-dir dist",
    "dist": "yarn clean && yarn build && yarn update-version",
    "test": "yarn test-ci --watch",
    "test-ci": "jest",
    "update-version": "VERSION=`git describe --tags --always` && sed -i -- 's/undefined/\"'\"$VERSION\"'\"/g' dist/version.js"
  }
}
