  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "convict": "^5.1.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "fs-extra-promise": "1.0.1",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.6.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.9",
    "mustache": "^3.0.1",
    "node-cache": "^4.2.1",
    "pem-jwk": "^2.0.0",
    "uuid": "^3.3.2",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "axios-mock-adapter": "^1.17.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "node-mocks-http": "^1.7.6",
    "nodemon": "^1.19.1",
    "shx": "^0.3.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "start": "nodemon --exec babel-node src/server.js",
    "clean": "shx rm -rf ./dist",
    "build": "babel src --ignore spec.js,__mocks__ --out-dir dist",
    "dist": "yarn clean && yarn build && yarn update-version",
    "test": "yarn test-ci --watch",
    "test-ci": "jest",
    "update-version": "VERSION=`git describe --tags --always` && sed -i -- 's/undefined/\"'\"$VERSION\"'\"/g' dist/version.js"
  }
}
